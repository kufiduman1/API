@echo off
:indir
curl -o python-installer.exe https://www.python.org/ftp/python/3.12.8/python-3.12.8.exe
if not exist python-installer.exe (
    echo Indirme basarisiz. Tekrar deneniyor...
    timeout /t 5 >nul
    goto indir
)
python-installer.exe /quiet InstallAllUsers=1 PrependPath=1 Include_pip=1
